<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockapp.controllers.AdminController">

    <children>

        <VBox layoutX="180.0" layoutY="70.0" prefHeight="650.0" prefWidth="900.0">
            <children>

                <HBox prefHeight="90.0" prefWidth="900.0">
                    <children>
                        <Button fx:id="addButton" prefHeight="40.0" text="Add">
                            <font><Font name="Cambria" size="20.0" /></font>
                            <HBox.margin><Insets bottom="20.0" left="30.0" right="40.0" top="20.0" /></HBox.margin>
                        </Button>

                        <Button fx:id="modifyButton" prefHeight="40.0" text="Modify">
                            <font><Font name="Cambria" size="20.0" /></font>
                            <HBox.margin><Insets bottom="20.0" left="30.0" right="40.0" top="20.0" /></HBox.margin>
                        </Button>

                        <Button fx:id="deleteButton" prefHeight="40.0" text="Delete">
                            <font><Font name="Cambria" size="20.0" /></font>
                            <HBox.margin><Insets bottom="20.0" left="30.0" right="20.0" top="20.0" /></HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <!-- FIXED: added fx:id -->
                <TableView fx:id="usersTable" prefWidth="200.0">
                    <columns>
                  <TableColumn minWidth="20.0" prefWidth="168.0" text="Id" />
                        <TableColumn fx:id="userNameColumn" prefWidth="168.0" text="username" />
                        <TableColumn fx:id="fullNameColumn" prefWidth="168.0" text="full name" />
                        <TableColumn fx:id="roleColumn" prefWidth="168.0" text="Role" />
                        <TableColumn fx:id="createdAtColumn" prefWidth="168.0" text="Created at" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
                    </VBox.margin>
                </TableView>

            </children>
        </VBox>

        <Label layoutX="180.0" layoutY="20.0" text="Hi, ">
            <font><Font size="30.0" /></font>
         <padding>
            <Insets left="30.0" />
         </padding>
        </Label>

        <Label fx:id="userNameLabel" layoutX="230.0" layoutY="20.0">
            <font><Font size="30.0" /></font>
         <padding>
            <Insets left="50.0" />
         </padding>
        </Label>

        <VBox prefHeight="720.0" prefWidth="180.0" style="-fx-background-color: #2596be;">
            <children>
                <Button fx:id="usersButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2596be;" text="Users" textAlignment="CENTER" textFill="WHITE">
                    <VBox.margin><Insets top="100.0" /></VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
                </Button>

                <Button fx:id="productButton" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2596be;" text="Products" textFill="#c5c5c5">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
                </Button>

                <Button fx:id="sighOutButton" alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2596be;" text="sign out" textAlignment="JUSTIFY" textFill="#c5c5c5">
                    <VBox.margin><Insets top="20.0" /></VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
                </Button>
            </children>
        </VBox>

    </children>
</AnchorPane>
