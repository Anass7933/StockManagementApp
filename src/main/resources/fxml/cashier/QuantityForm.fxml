<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
			fx:controller="com.stockapp.controllers.cashier.QuantityFormController"
			stylesheets="@../../css/cashier/quantityForm.css"
            prefWidth="300" prefHeight="180">

    <children>
        <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label fx:id="lblProductName" text="Product Name" styleClass="dialog-title"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Quantity:"/>
				<TextField fx:id="txtQuantity" promptText="1" minWidth="80"/>
                <Label fx:id="lblMaxStock" text="Max: 0"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS"/>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="btnCancel" text="Cancel"/>
                <Button fx:id="btnAdd" text="Add"/>
            </HBox>

        </VBox>
    </children>

</AnchorPane>

