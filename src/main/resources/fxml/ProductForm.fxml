<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="12" vgap="14"
          xmlns="http://javafx.com/javafx/25"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.stockapp.controllers.ProductFormController">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <!-- NAME -->
    <Label text="Name:" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <!-- PRICE -->
    <Label text="Price:" GridPane.rowIndex="1"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- QUANTITY -->
    <Label text="Quantity:" GridPane.rowIndex="2"/>
    <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- CATEGORY -->
    <Label text="Category:" GridPane.rowIndex="3"/>
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- MIN STOCK -->
    <Label text="Min Stock:" GridPane.rowIndex="4"/>
    <TextField fx:id="minStockField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <!-- DESCRIPTION -->
    <Label text="Description:" GridPane.rowIndex="5" GridPane.valignment="TOP"/>
    <TextArea fx:id="descriptionField" prefHeight="60" prefWidth="200"
              GridPane.columnIndex="1" GridPane.rowIndex="5"/>


    <!-- BUTTONS -->
    <HBox spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button fx:id="saveButton"
                prefWidth="100"
                style="-fx-background-color: #2596be; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 6;"
                text="Save"/>

        <Button fx:id="cancelButton"
                onAction="#cancelButtonOnAction"
                prefWidth="100"
                style="-fx-background-color: #2596be; -fx-text-fill: white; -fx-font-size: 13px; -fx-background-radius: 6;"
                text="Cancel"/>
    </HBox>

    <columnConstraints>
        <ColumnConstraints minWidth="120"/>
        <ColumnConstraints minWidth="240"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="30"/>
        <RowConstraints minHeight="80"/>
        <RowConstraints minHeight="40"/>
    </rowConstraints>

</GridPane>
