<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockapp.controllers.AdminProductsController">

    <!-- LEFT SIDE MENU -->
    <VBox prefHeight="720.0" prefWidth="180.0" style="-fx-background-color: #2596be;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">

        <children>
            <Button fx:id="usersButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #2596be;" text="Users" textFill="#c5c5c5">
                <font><Font name="Cambria" size="20" /></font>
                <VBox.margin><Insets top="150" /></VBox.margin>
            </Button>

            <Button fx:id="productsButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #2596be;" text="Products" textFill="WHITE">
                <font><Font name="Cambria" size="25" /></font>
                <VBox.margin><Insets top="20" /></VBox.margin>
            </Button>

            <Button fx:id="sighOutButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #2596be;" text="Sign Out" textFill="#c5c5c5">
                <font><Font name="Cambria" size="20" /></font>
                <VBox.margin><Insets top="20" /></VBox.margin>
            </Button>
        </children>
    </VBox>

    <!-- MAIN CONTENT -->
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- USERNAME LABEL (EMPTY, CONTROLLER WILL SET IT)-->
        <Label fx:id="userNameLabel" alignment="TOP_LEFT" prefHeight="60" prefWidth="900" text="">
            <font><Font name="Cambria" size="30" /></font>
            <padding><Insets top="20" /></padding>
         <VBox.margin>
            <Insets left="-130.0" />
         </VBox.margin>
        </Label>

        <!-- BUTTON ROW -->
        <HBox prefWidth="900" spacing="20">
            <children>
                <Button fx:id="addButton" prefHeight="40" prefWidth="120" text="Add">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>

                <Button fx:id="modifyButton" prefHeight="40" prefWidth="120" text="Modify">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>

                <Button fx:id="deleteButton" prefHeight="40" prefWidth="120" text="Delete">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>
            </children>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin>
        </HBox>
      <TextField prefHeight="25.0" prefWidth="250.0" promptText="Search by name or category" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="30.0" right="750.0" />
         </VBox.margin>
      </TextField>

        <!-- PRODUCTS TABLE -->
        <TableView fx:id="productsTable" prefWidth="850" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="160.0" style="-fx-alignment: CENTER;" text="Id" />
                <TableColumn fx:id="nameColumn" prefWidth="300.0" style="-fx-alignment: CENTER;" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="180.0" style="-fx-alignment: CENTER;" text="Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="180.0" style="-fx-alignment: CENTER;" text="Qty" />
                <TableColumn fx:id="categoryColumn" prefWidth="220.0" style="-fx-alignment: CENTER;" text="Category" />
            </columns>
         <padding>
            <Insets bottom="30.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" />
         </VBox.margin>
        </TableView>

    </VBox>

</AnchorPane>
