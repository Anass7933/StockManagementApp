<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockapp.controllers.StockManagerDashboardController">

    <!-- LEFT SIDEBAR -->
    <VBox prefHeight="720.0" prefWidth="180.0" style="-fx-background-color: #2596be;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">

        <children>
            <Button fx:id="productsButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #2596be;" text="Products" textFill="WHITE">
                <font><Font name="Cambria" size="25" /></font>
                <VBox.margin><Insets top="150" /></VBox.margin>
            </Button>

            <Button fx:id="sighOutButton" prefHeight="40" prefWidth="180" style="-fx-background-color: #2596be;" text="Sign Out" textFill="#c5c5c5">
                <font><Font name="Cambria" size="20" /></font>
                <VBox.margin><Insets top="20" /></VBox.margin>
            </Button>
        </children>
    </VBox>

    <!-- MAIN CONTENT -->
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- USERNAME LABEL (EMPTY, CONTROLLER SETS TEXT) -->
        <Label fx:id="userNameLabel" alignment="TOP_LEFT" prefHeight="60" prefWidth="900" text="">
            <font><Font name="Cambria" size="30" /></font>
            <padding><Insets top="20" /></padding>
         <VBox.margin>
            <Insets left="30.0" />
         </VBox.margin>
        </Label>

        <!-- TOP BUTTONS -->
        <HBox prefWidth="900" spacing="20">
            <children>
                <Button fx:id="addButton" prefHeight="40" prefWidth="120" text="Add">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>

                <Button fx:id="modifyButton" prefHeight="40" prefWidth="120" text="Modify">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>

                <Button fx:id="deleteButton" prefHeight="40" prefWidth="120" text="Delete">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>

                <Button fx:id="restockButton" prefHeight="40" prefWidth="120" text="Restock">
                    <font><Font name="Cambria" size="20" /></font>
                </Button>
            </children>
         <padding>
            <Insets left="30.0" />
         </padding>
        </HBox>

        <!-- PRODUCTS TABLE -->
        <TableView fx:id="productsTable" prefWidth="850" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Id" />
                <TableColumn fx:id="nameColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Name" />
                <TableColumn fx:id="priceColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Price" />
                <TableColumn fx:id="quantityColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Quantity" />
                <TableColumn fx:id="categoryColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Category" />
                <TableColumn fx:id="stockCheckColumn" prefWidth="140" style="-fx-alignment: CENTER;" text="Stock Status" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
