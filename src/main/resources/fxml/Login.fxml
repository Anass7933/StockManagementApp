<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stockapp.controllers.LoginController">

    <children>
        <Label layoutX="75.0" layoutY="93.0" text="Username*">
            <font>
                <Font name="Cambria" size="12.0" />
            </font></Label>
        <Label layoutX="215.0" layoutY="28.0" text="Login">
            <font>
                <Font name="Cambria" size="30.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" layoutX="74.0" layoutY="114.0" prefHeight="26.0" prefWidth="350.0" promptText="admin" />

        <Label layoutX="76.0" layoutY="166.0" text="Password*">
            <font>
                <Font name="Cambria" size="12.0" />
            </font></Label>

        <PasswordField fx:id="passwordField" layoutX="75.0" layoutY="187.0" prefWidth="350.0" promptText="********" />

        <Label fx:id="incorrectLabel" alignment="CENTER_RIGHT" layoutX="74.0" layoutY="215.0" prefHeight="18.0" prefWidth="350.0" textFill="RED" />

        <Button fx:id="loginButton" layoutX="75.0" layoutY="270.0" onAction="#loginButtonOnAction" prefHeight="30.0" prefWidth="350.0" style="-fx-background-color: #2596be;" text="Login" textFill="WHITE">
            <font>
                <Font name="Cambria" size="12.0" />
            </font></Button>

        <Button fx:id="cancelButton" layoutX="75.0" layoutY="310.0" onAction="#cancelButtonOnAction" prefHeight="30.0" prefWidth="350.0" style="-fx-background-color: #2596be;" text="Exit" textFill="WHITE">
            <font>
                <Font name="Cambria" size="12.0" />
            </font></Button>
    </children>

</AnchorPane>
