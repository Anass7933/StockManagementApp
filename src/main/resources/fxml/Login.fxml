<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:controller="com.stockapp.controllers.LoginController"
            prefHeight="400.0" prefWidth="500.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label layoutX="75.0" layoutY="94.0" text="Username*" />
        <Label layoutX="215.0" layoutY="22.0" text="Login">
            <font>
                <Font name="Baskerville Old Face" size="30.0" />
            </font>
        </Label>

        <TextField fx:id="usernameField" layoutX="74.0" layoutY="114.0"
                   prefHeight="26.0" prefWidth="350.0" promptText="admin" />

        <Label layoutX="76.0" layoutY="162.0" text="Password*" />

        <PasswordField fx:id="passwordField" layoutX="75.0" layoutY="187.0"
                       prefWidth="350.0" promptText="********" />

        <Label fx:id="incorrectLabel" layoutX="74.0" layoutY="215.0"
               prefHeight="18.0" prefWidth="350.0" textFill="RED" />

        <Button fx:id="loginButton"
                layoutX="75.0" layoutY="270.0"
                prefWidth="350.0"
                text="Login"
                onAction="#loginButtonOnAction"/>

        <Button fx:id="cancelButton"
                layoutX="75.0" layoutY="310.0"
                prefWidth="350.0"
                text="Cancel"
                onAction="#cancelButtonOnAction"/>
    </children>

</AnchorPane>
